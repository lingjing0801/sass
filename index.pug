                span(class="logo-zh") 獅子堂啤酒專賣
            nav
                +nav-a("home", "關於我們","ABOUT")
                +nav-a("location","全球據點","LOCATIONS")
                +nav-a("hot","熱門經典","CLASSICAL")
                +nav-a("contact","加盟專區","FRANCHISEE")
        section(id="banner")
        section(id="about")
            div(class="bg bg-about")
            div(class="container")
                +title("home", "關於我們", "ABOUT")


        section(id="location")
            div(class="bg bg-location")
            div(class="container")
                +title("location", "全球據點", "LOCATIONS")

                div(id="location-container")
                    +loaction-box("台灣", "Taiwan", "location-taipei")
                    +loaction-box("台灣", "Taiwan", "location-taipei")
                    +loaction-box("台灣", "Taiwan", "location-taipei")
                    +loaction-box("台灣", "Taiwan", "location-taipei")
                    +loaction-box("台灣", "Taiwan", "location-taipei")
                    +loaction-box("台灣", "Taiwan", "location-taipei")
                    +loaction-box("台灣", "Taiwan", "location-taipei")
                    +loaction-box("台灣", "Taiwan", "location-taipei")
                    +loaction-box("台灣", "Taiwan", "location-taipei")
        
        section(id="classcial")
             div(class="bg bg-location")
             div(class="container")
                +title("hot","熱門經典","CLASSICAL")
