mixin nav-a(img,textZH,textEN)
    a(href="#")
        img(src="img/" + img + ".png", alt="連結縮圖")
        span=textZH
        br
        span=textEN
mixin title(img,textZH,textEN)
    div(class="title")
        img(src="img/" + img + ".png", alt="連結縮圖")
        span=textZH
        br
        span=textEN
mixin loaction-box(nameZh, nameEg, img)
    div(class="location-box")
        div(class="location-title")
            div(class="location-text")
                span=nameZh
                br
                span=nameEg
            img(src="img/location.png", alt="據點")
        div(class="location-img-box")
            img(src="img/" + img + ".png", alt="據點")
<!DOCTYPE html>
html(lang="zh")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="style.css")
        //- aos 套件 cdn
        link(rel="stylesheet", href="https://unpkg.com/aos@next/dist/aos.css")
        title 獅子堂 | 首頁 | 啤酒專賣
    body
        header(id="nav")
            div(class="logo") LION SUGAR
