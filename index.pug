mixin nav-a(img,textZH,textEN)
    a(href="#")
        img(src="img/" + img + ".png", alt="連結縮圖")
        span=textZH
        br
        span=textEN
mixin title(img,textZH,textEN)
    div(class="title")
        img(src="img/" + img + ".png", alt="連結縮圖")
        span=textZH
        br
        span=textEN
mixin about-box(img, title, content, delay)
    div(class="about-box" data-aos="slide-up" data-aos-duration="1000" data-aos-delay=delay)
        img(src="img/" + img + ".png" alt="關於獅子堂")
        div(class="about-content")
            h2=title
            p=content
mixin loaction-box(nameZh, nameEg, img)
    div(class="location-box")
        div(class="location-title")
            div(class="location-text")
                span=nameZh
                br
                span=nameEg
            img(src="img/location.png", alt="據點")
        div(class="location-img-box")
            img(src="img/" + img + ".png", alt="據點")
